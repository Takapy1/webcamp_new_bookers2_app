<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= link_to user, target: "_blank" do %>
          <%= attachment_image_tag user, :profile_image, :fill, 40, 40,
                              format: 'jpeg', fallback: "no_image.jpeg", size:'40x40' %>
          <br>
          <%= user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to book.title, book_path(user) %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <% if current_user.favorite?(book.id) %>
          <%= link_to destroy_favorite_path(book), method: :delete, class: "favorited-btn" do %>
            <i class="fa fa-heart"></i>
            <%= book.favorites_count %>
          <% end %>
        <% else %>
          <%= link_to create_favorite_path(book), method: :post, class: "unfavorited-btn" do %>
          <i class="fa fa-heart"></i>
            <%= book.favorites_count %>
           <% end %>
          <% end %>
      </td>
      <% if user.id == current_user.id %>
        <td>
          <%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-success" %>
        </td>
        <td>
          <%= link_to "Destroy", book, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "本当に消しますか" } %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>