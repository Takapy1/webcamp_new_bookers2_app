<h2>Users</h2>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to (attachment_image_tag user, :profile_image, :fill, 40, 40,
                            format: 'jpeg', fallback: "no_image.jpeg", size:'40x40'),
                      user %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td><%= link_to "Show", user %></td>
      </tr>
    <% end %>
  </tbody>
</table>