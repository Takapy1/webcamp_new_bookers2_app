<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	<%= form_with model: @book, url: book_path(@book), local:true do |f| %>
    	  <%= render 'shared/error_messages', model: @book %>
  		  <div class="form-group">
          <label for="title">Title</label>
          <%= f.text_field :title, autofocus: true, class: "form-control book_title" %>
        </div>

        <div class="form-group">
          <label for="body">Opinion</label>
          <%= f.text_area :body, autofocus: true, class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
    	 <% end %>
    	 <%= link_to "Show", @book %>  |
    	 <%= link_to "Back", books_path %>
    </div>
  </div>
</div>